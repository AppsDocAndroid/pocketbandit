<project name="pocketbandit-desktop">

  <property name="lib.dir" value="libs" />
  <property name="src.dir" value="src" />
  <property name="build.dir" value="compiled" />
  <property name="class.main" value="de.onyxbits.pocketbandit.DesktopGame"/>
  <path id="build-classpath">
    <fileset dir="${lib.dir}">
      <include name="**/*.jar"/>
    </fileset>
  </path>
  
  <target name="desktop-build" depends="desktop-clean, desktop-compile, desktop-bundle">
    <echo>Building a desktop version for debugging purposes</echo>
  </target>
  
  <target name="desktop-clean">
    <delete failonerror="false" includeEmptyDirs="true">
      <fileset dir="." includes="**/DEADJOE" />
      <fileset dir="." includes="**/*~" defaultexcludes="false"/>
      <fileset dir="${build.dir}"  />
    </delete>
  </target>
  
  <target name="desktop-compile">
    <mkdir dir="${build.dir}" />
    <javac srcdir="${src.dir}" destdir="${build.dir}"  target="1.5" debug="true" >
      <classpath refid="build-classpath"/>
    </javac>
  </target>
  
  <target name="desktop-bundle">
  </target>
</project>